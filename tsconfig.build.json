{
  "exclude": [
    "**/*.test.ts",
    "**/*.stub.ts",
    "node_modules",
    "dist",
    "es",
    "lib"
  ],
  "compilerOptions": {
    // "strict": true,
    //"sourceMap": true,
    // "forceConsistentCasingInFileNames": true,
    // "declaration": true,

    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "es6",
    "skipLibCheck": true,
    "allowJs": true,
    "importsNotUsedAsValues": "preserve",
    "paths": {
      "@westsecuan/*": [
        "./packages/*"
      ]
    }
  }
}
