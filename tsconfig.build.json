{
  "exclude": [
    "**/*.test.ts",
    "**/*.stub.ts",
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "module": "es6",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "paths": {
      "@westsecuan/*": [
        "./packages/*"
      ]
    }
  }
}
